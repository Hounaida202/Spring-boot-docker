pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = 'etrichi'
        IMAGE_NAME = 'hounaida202/demo1-app'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Hounaida202/Spring-boot-docker.git'
            }
        }

        stage('Build') {
            steps {
                dir('demo1') {
                    echo 'Build Maven'
                    bat 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Run Unit Tests') {
            steps {
                dir('demo1') {
                    echo 'Run unit tests'
                    bat 'mvn test'
                }
            }
        }

        stage('Build Docker Images') {
            steps {
                dir('demo1') {
                    echo 'Build Docker App'
                    bat "docker build -t %IMAGE_NAME% ."
                }
            }
        }

        stage('Push Docker Images') {
            steps {
                dir('demo1') {
                    echo 'Push Docker App to Docker Hub'
                    withCredentials([usernamePassword(credentialsId: "${DOCKERHUB_CREDENTIALS}", passwordVariable: 'PASS', usernameVariable: 'USER')]) {
                        bat "echo %PASS% | docker login -u %USER% --password-stdin"
                        bat "docker push %IMAGE_NAME%"
                    }
                }
            }
        }

        stage('Deploy / Run Containers') {
            steps {
                dir('demo1') {
                    echo 'Deploy with Docker Compose'
                    bat "docker-compose down || echo 'Aucun conteneur à arrêter'"
                    bat "docker-compose up -d"

                    // Attendre 10 secondes pour que les conteneurs démarrent
                    bat 'ping -n 10 127.0.0.1 > nul'

                    // Vérifier l'état des conteneurs
                    bat 'docker-compose ps'

                    // Vérifier que l'application démarre correctement
                    bat 'timeout /t 5 /nobreak && echo "Attente terminée"'
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished'
            dir('demo1') {
                bat 'docker-compose ps || echo "Docker compose non disponible"'
            }
        }
        success {
            echo 'Pipeline successful! '
            echo ''
            echo '=== Applications déployées ==='
            echo 'Spring Boot App: http://localhost:8081'
            echo 'PgAdmin: http://localhost:5050'
            echo '  - Email: admin@admin.com'
            echo '  - Password: admin'
            echo 'PostgreSQL: localhost:5432'
            echo '  - Database: spring-boot-docker'
            echo '  - User: postgres'
            echo '  - Password: etrichi'
            echo '=============================='
        }
        failure {
            echo 'Pipeline failed '
            dir('demo1') {
                bat 'docker-compose logs --tail=50 || echo "Impossible de récupérer les logs"'
            }
        }
    }
}