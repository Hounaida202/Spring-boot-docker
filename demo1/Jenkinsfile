pipeline {
    agent any

    environment {
        // Docker Hub credentials ID configur√© dans Jenkins (voir plus bas)
        DOCKERHUB_CREDENTIALS = 'etrichi'
        IMAGE_NAME = 'hounaida202/demo1-app'
        POSTGRES_IMAGE = 'hounaida202/postgres:14'
    }

    stages {

        stage('Checkout Code') {
            steps {
                // Cloner le repo GitHub
                git branch: 'main',
                    url: 'https://github.com/Hounaida202/Spring-boot-docker.git'
            }
        }

        stage('Build') {
            steps {
                echo 'üõ†Ô∏è Build Maven'
                sh './mvnw clean package -DskipTests' // G√©n√®re le jar
            }
        }

        stage('Run Unit Tests') {
            steps {
                echo '‚úÖ Ex√©cution des tests unitaires'
                sh './mvnw test'
            }
        }

        stage('Build Docker Images') {
            steps {
                echo 'üê≥ Build Docker App'
                sh "docker build -t ${IMAGE_NAME}:latest ."
            }
        }

        stage('Push Docker Images') {
            steps {
                echo 'üì§ Push Docker App sur Docker Hub'
                withCredentials([usernamePassword(credentialsId: "${DOCKERHUB_CREDENTIALS}", passwordVariable: 'PASS', usernameVariable: 'USER')]) {
                    sh "echo $PASS | docker login -u $USER --password-stdin"
                    sh "docker push ${IMAGE_NAME}:latest"
                    sh "docker push ${POSTGRES_IMAGE}"
                }
            }
        }

        stage('Deploy / Run Containers') {
            steps {
                echo 'üöÄ D√©ploiement avec Docker Compose'
                sh "docker-compose down" // stop containers si existants
                sh "docker-compose up -d" // d√©marre containers
            }
        }
    }

    post {
        always {
            echo 'üîî Pipeline termin√©'
        }
        success {
            echo 'üéâ Pipeline ex√©cut√© avec succ√®s !'
        }
        failure {
            echo '‚ùå Pipeline √©chou√© !'
        }
    }
}
