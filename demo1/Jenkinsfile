pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = 'etrichi'
        IMAGE_NAME = 'hounaida202/demo1-app'
        POSTGRES_IMAGE = 'hounaida202/postgres:14'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Hounaida202/Spring-boot-docker.git'
            }
        }

        stage('Build') {
            steps {
                dir('demo1') {
                    echo 'Build Maven'
                    bat 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Run Unit Tests') {
            steps {
                dir('demo1') {
                    echo 'Run unit tests'
                    bat 'mvn test'
                }
            }
        }

        stage('Build Docker Images') {
            steps {
                dir('demo1') {
                    echo 'Build Docker App'
                    bat "docker build -t %IMAGE_NAME% ."
                }
            }
        }

        stage('Push Docker Images') {
            steps {
                dir('demo1') {
                    echo 'Push Docker App to Docker Hub'
                    withCredentials([usernamePassword(credentialsId: "${DOCKERHUB_CREDENTIALS}", passwordVariable: 'PASS', usernameVariable: 'USER')]) {
                        bat "echo %PASS% | docker login -u %USER% --password-stdin"
                        bat "docker push %IMAGE_NAME%"
                        // Optionnel: Si tu veux aussi pousser PostgreSQL, décommente la ligne suivante
                        // bat "docker tag postgres:14 %POSTGRES_IMAGE% && docker push %POSTGRES_IMAGE%"
                    }
                }
            }
        }

        stage('Deploy / Run Containers') {
            steps {
                dir('demo1') {
                    echo 'Deploy with Docker Compose'
                    bat "docker-compose down || echo 'Aucun conteneur à arrêter'"
                    bat "docker-compose up -d"

                    // Attendre un peu pour que les conteneurs démarrent
                    bat 'timeout /t 10'

                    // Vérifier l'état des conteneurs
                    bat 'docker-compose ps'

                    // Vérifier les logs (optionnel, pour debugging)
                    bat 'docker-compose logs --tail=10 app'
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished'
            dir('demo1') {
                bat 'docker-compose ps || echo "Docker compose non disponible"'
            }
        }
        success {
            echo 'Pipeline successful!'
            echo 'Application Spring Boot: http://localhost:8081'
            echo 'PgAdmin: http://localhost:5050 (admin@admin.com / admin)'
            echo 'PostgreSQL: localhost:5432'
        }
        failure {
            echo 'Pipeline failed'
            dir('demo1') {
                bat 'docker-compose logs || echo "Impossible de récupérer les logs"'
            }
        }
    }
}